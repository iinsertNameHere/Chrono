#bin/bash

# Defining Global variables
full_path="$0"
directory=$(dirname "$full_path")

srcdir="$directory/src"
outdir="$directory/dist"

arg1="$1"

# Handling Help option
function printHelp {
    echo "Help"
    exit
}

if [ arg1 = "-h" ]; then
    printHelp
elif [ arg1 = "--help" ]; then
    printHelp
elif [ arg1 = "help" ]; then
    printHelp
fi

# Building src

echo "## Building Chrono ##"
echo "For a list of arguments use '-h'"
echo ""

function build {
    local srcpath=$1
    local filename=$(basename "$srcpath")

    IFS='.' read -ra parts <<< "$filename"
    local name="${parts[0]}"

    echo "[Build] Compiling $filename ..."
    nim compile --outdir:$outdir -d:release $srcpath

    if [ arg1 = "$name" ]; then
        exit
    fi
}

# Compile cvm.nim
build "$srcdir/cvm/cvm.nim"

echo "Compiled all files!"