#bin/bash

# Defining Global variables
full_path="$0"
directory=$(dirname "$full_path")

srcdir="$directory/src"
outdir="$directory/dist"

arg1="$1"

# Handling Help option
function printHelp {
    echo "Help"
    exit
}

if [ arg1 = "-h" ]; then
    printHelp
elif [ arg1 = "--help" ]; then
    printHelp
elif [ arg1 = "help" ]; then
    printHelp
fi

# Building src

echo "## Building Chrono ##"
echo ""

function build {
    local srcpath=$1
    local filename=$(basename "$srcpath")

    IFS='.' read -ra parts <<< "$filename"
    local name="${parts[0]}"

    echo "[Build] Compiling $filename ..."
    # nim compile --outdir:$outdir -d:release $srcpath
    nim compile --outdir:$outdir $srcpath
}

# Compile cvm.nim
build "$srcdir/cvm.nim"

# Compile ccro.nim
build "$srcdir/ccro.nim"